// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  password_hash String
  products      Product[]
  orders        Order[]
  customers     Customer[]
  created_at    DateTime   @default(now())

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Decimal
  quantity    Int
  created_at  DateTime @default(now())

  User        User      @relation(fields: [user_id], references: [id])
  user_id     String
  orders      Order[]
  Customer    Customer? @relation(fields: [customer_id], references: [id])
  customer_id String?

  @@map("products")
}

model Customer {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  phone      String
  created_at DateTime  @default(now())
  orders     Order[]
  addresses  Address[]
  products   Product[]
  User       User      @relation(fields: [user_id], references: [id])
  user_id    String

  @@map("customers")
}

model Address {
  id          String   @id @default(uuid())
  street      String
  city        String   @unique
  zip_code    String
  created_at  DateTime @default(now())
  Customer    Customer @relation(fields: [customer_id], references: [id])
  customer_id String

  @@map("address")
}

model Order {
  id          String    @id @default(uuid())
  customer    Customer  @relation(fields: [customer_id], references: [id])
  customer_id String
  User        User      @relation(fields: [user_id], references: [id])
  user_id     String
  products    Product[]

  @@map("orders")
}
